{
  "info": {
    "name": "RelayX API",
    "description": "API collection for testing RelayX AI Caller",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "agent_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "call_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Root Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/",
              "host": ["{{base_url}}"],
              "path": [""]
            }
          }
        },
        {
          "name": "Detailed Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            }
          }
        }
      ]
    },
    {
      "name": "Agents",
      "item": [
        {
          "name": "Create Agent",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('agent_id', jsonData.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Sales Assistant\",\n  \"system_prompt\": \"You are a friendly and professional sales assistant. Your goal is to understand customer needs and explain how our product can help. Keep responses concise (2-3 sentences max). Be empathetic and ask clarifying questions when needed.\",\n  \"temperature\": 0.7,\n  \"max_tokens\": 150,\n  \"is_active\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/agents",
              "host": ["{{base_url}}"],
              "path": ["agents"]
            }
          }
        },
        {
          "name": "List Agents",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/agents",
              "host": ["{{base_url}}"],
              "path": ["agents"]
            }
          }
        },
        {
          "name": "Get Agent by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/agents/{{agent_id}}",
              "host": ["{{base_url}}"],
              "path": ["agents", "{{agent_id}}"]
            }
          }
        },
        {
          "name": "Update Agent",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"temperature\": 0.8,\n  \"is_active\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/agents/{{agent_id}}",
              "host": ["{{base_url}}"],
              "path": ["agents", "{{agent_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Calls",
      "item": [
        {
          "name": "Create Outbound Call",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('call_id', jsonData.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"agent_id\": \"{{agent_id}}\",\n  \"to_number\": \"+1234567890\",\n  \"metadata\": {\n    \"campaign\": \"test\",\n    \"source\": \"postman\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/calls/outbound",
              "host": ["{{base_url}}"],
              "path": ["calls", "outbound"]
            }
          }
        },
        {
          "name": "List Calls",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/calls?limit=20",
              "host": ["{{base_url}}"],
              "path": ["calls"],
              "query": [
                {
                  "key": "agent_id",
                  "value": "{{agent_id}}",
                  "disabled": true
                },
                {
                  "key": "status",
                  "value": "completed",
                  "disabled": true
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Get Call by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/calls/{{call_id}}",
              "host": ["{{base_url}}"],
              "path": ["calls", "{{call_id}}"]
            }
          }
        },
        {
          "name": "Get Call Transcripts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/calls/{{call_id}}/transcripts",
              "host": ["{{base_url}}"],
              "path": ["calls", "{{call_id}}", "transcripts"]
            }
          }
        }
      ]
    }
  ]
}
